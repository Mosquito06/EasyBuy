<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/static_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.or.dgit.bigdata.easybuy.Static_Activity">

    <FrameLayout
        android:id="@+id/static_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/static_floating_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:menu_animationDelayPerItem="55"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_buttonSpacing="0dp"
        app:menu_colorNormal="@color/mainTextColor"
        app:menu_colorPressed="#555"
        app:menu_colorRipple="@color/blackColor"
        app:menu_fab_label="차트를 선택하세요"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/fab_add"
        app:menu_labels_colorNormal="#333"
        app:menu_labels_colorPressed="#444"
        app:menu_labels_colorRipple="#66efecec"
        app:menu_labels_cornerRadius="3dp"
        app:menu_labels_ellipsize="none"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        app:menu_labels_margin="0dp"
        app:menu_labels_maxLines="-1"
        app:menu_labels_padding="8dp"
        app:menu_labels_position="left"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        app:menu_labels_showShadow="true"
        app:menu_labels_singleLine="false"
        app:menu_labels_textColor="#f2f1f1"
        app:menu_labels_textSize="15sp"
        app:menu_openDirection="up"
        app:menu_shadowColor="#555"
        app:menu_shadowRadius="3dp"
        app:menu_shadowXOffset="1dp"
        app:menu_shadowYOffset="3dp"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/static_floating_pie_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="판매비율(PieChart)"
            app:fab_size="mini"
            app:fab_colorNormal="@color/mainTextColor"
            android:onClick="setStaticBtn"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/static_floating_bar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="매출현황(BarChart)"
            app:fab_size="mini"
            app:fab_colorNormal="@color/mainTextColor"
            android:onClick="setStaticBtn"/>

    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>
